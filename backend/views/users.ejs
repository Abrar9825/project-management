<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users | Project Control System</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">

    <!-- Navigation Bar -->
    <nav class="bg-white border-b border-gray-100 sticky top-0 z-50 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/my-work" class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                    </div>
                    <span class="text-xl font-bold text-gray-800">ProjectControl</span>
                </a>
                <div class="hidden md:flex items-center space-x-1" id="navLinks">
                    <a href="/my-work" class="px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-100 font-medium transition-all">My Work</a>
                    <a href="/projects" class="px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-100 font-medium transition-all admin-subadmin-only">Projects</a>
                    <a href="/users" class="px-4 py-2 rounded-lg bg-indigo-50 text-indigo-700 font-medium transition-all admin-only">Users</a>
                    <a href="/documents" class="px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-100 font-medium transition-all admin-only">Documents</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/profile" class="flex items-center space-x-3 hover:bg-gray-50 rounded-lg px-2 py-1 transition-all">
                        <div class="w-9 h-9 bg-gradient-to-br from-emerald-400 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold text-sm"><span id="userInitials">AK</span></div>
                        <span class="hidden sm:block text-sm font-medium text-gray-700" id="userName">Admin</span>
                    </a>
                    <button onclick="logout()" class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all" title="Logout">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Users</h1>
                <p class="text-gray-500 mt-1">Manage team members and access</p>
            </div>
            <button onclick="openAddUserModal()" class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
                Add User
            </button>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
                <div class="text-3xl font-bold text-gray-900" id="totalUsers">0</div>
                <div class="text-sm text-gray-500 mt-1">Total Users</div>
            </div>
            <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
                <div class="text-3xl font-bold text-indigo-600" id="adminCount">0</div>
                <div class="text-sm text-gray-500 mt-1">Admins</div>
            </div>
            <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
                <div class="text-3xl font-bold text-purple-600" id="subadminCount">0</div>
                <div class="text-sm text-gray-500 mt-1">Sub-Admins</div>
            </div>
            <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
                <div class="text-3xl font-bold text-emerald-600" id="devCount">0</div>
                <div class="text-sm text-gray-500 mt-1">Developers</div>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="flex gap-2 mb-6 overflow-x-auto pb-2">
            <button onclick="filterUsers('all')" id="filter-all" class="px-4 py-2 bg-indigo-600 text-white rounded-lg font-medium transition-all">All</button>
            <button onclick="filterUsers('admin')" id="filter-admin" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all">Admin</button>
            <button onclick="filterUsers('subadmin')" id="filter-subadmin" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all">Sub-Admin</button>
            <button onclick="filterUsers('developer')" id="filter-developer" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all">Developer</button>
        </div>

        <!-- Users Grid -->
        <div id="usersGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
            <!-- Loading -->
            <div class="col-span-full text-center py-10">
                <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600 mx-auto"></div>
                <p class="text-gray-500 mt-3">Loading users...</p>
            </div>
        </div>

    </main>

    <!-- Add User Modal -->
    <div id="addUserModal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl w-full max-w-md sm:max-w-lg md:max-w-xl lg:max-w-2xl p-4 sm:p-6 max-h-[90vh] overflow-y-auto">
            <div class="flex items-center justify-between mb-4 sm:mb-6">
                <h3 class="text-lg sm:text-xl font-bold text-gray-900">Add New User</h3>
                <button onclick="closeModal('addUserModal')" class="p-2 hover:bg-gray-100 rounded-lg">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            
            <div id="addUserError" class="hidden mb-4 p-3 bg-red-50 text-red-600 rounded-lg text-sm"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
                    <input type="text" id="newUserName" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base" placeholder="John Doe">
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                    <input type="email" id="newUserEmail" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base" placeholder="john@example.com">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password *</label>
                    <input type="password" id="newUserPassword" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base" placeholder="Min 6 characters">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Role *</label>
                    <select id="newUserRole" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base bg-white">
                        <option value="developer">Developer</option>
                        <option value="subadmin">Sub-Admin</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                    <input type="tel" id="newUserPhone" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base" placeholder="+1 234 567 8900">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Hourly Rate (₹)</label>
                    <input type="number" id="newUserRate" class="w-full px-3 sm:px-4 py-2.5 sm:py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none text-sm sm:text-base" placeholder="500">
                </div>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3 mt-6">
                <button onclick="closeModal('addUserModal')" class="flex-1 px-4 py-2.5 sm:py-3 border border-gray-200 text-gray-700 rounded-xl hover:bg-gray-50 font-medium text-sm sm:text-base">Cancel</button>
                <button onclick="createUser()" id="createUserBtn" class="flex-1 px-4 py-2.5 sm:py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 font-medium text-sm sm:text-base">Create User</button>
            </div>
        </div>
    </div>

    <!-- View/Edit User Modal -->
    <div id="viewUserModal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl w-full max-w-md sm:max-w-lg p-4 sm:p-6 max-h-[90vh] overflow-y-auto">
            <div class="flex items-center justify-between mb-4 sm:mb-6">
                <h3 class="text-lg sm:text-xl font-bold text-gray-900">User Details</h3>
                <button onclick="closeModal('viewUserModal')" class="p-2 hover:bg-gray-100 rounded-lg">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            
            <div class="text-center mb-6">
                <div class="w-16 h-16 sm:w-20 sm:h-20 mx-auto rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center text-white text-2xl sm:text-3xl font-bold" id="viewUserAvatar">JD</div>
                <h4 class="text-lg sm:text-xl font-bold text-gray-900 mt-4" id="viewUserName">John Doe</h4>
                <p class="text-gray-500 text-sm sm:text-base" id="viewUserEmail">john@example.com</p>
            </div>
            
            <div class="space-y-3 mb-6">
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-500 text-sm sm:text-base">Role</span>
                    <span class="font-medium capitalize text-sm sm:text-base" id="viewUserRole">Developer</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-500 text-sm sm:text-base">Phone</span>
                    <span class="font-medium text-sm sm:text-base" id="viewUserPhone">-</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-500 text-sm sm:text-base">Hourly Rate</span>
                    <span class="font-medium text-sm sm:text-base" id="viewUserRate">₹0/hr</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-500 text-sm sm:text-base">Projects</span>
                    <span class="font-medium text-sm sm:text-base" id="viewUserProjects">0</span>
                </div>
                <div class="flex justify-between py-2">
                    <span class="text-gray-500 text-sm sm:text-base">Joined</span>
                    <span class="font-medium text-sm sm:text-base" id="viewUserJoined">-</span>
                </div>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3">
                <button onclick="closeModal('viewUserModal')" class="flex-1 px-4 py-2.5 sm:py-3 border border-gray-200 text-gray-700 rounded-xl hover:bg-gray-50 font-medium text-sm sm:text-base">Close</button>
                <button onclick="deleteSelectedUser()" id="deleteUserBtn" class="px-4 py-2.5 sm:py-3 bg-red-500 text-white rounded-xl hover:bg-red-600 font-medium text-sm sm:text-base">Delete</button>
            </div>
        </div>
    </div>

    <script src="/js/api.js"></script>
    <script>
        let users = [];
        let currentUser = null;
        let currentFilter = 'all';
        let selectedUserId = null;

        const roleColors = {
            admin: { bg: 'bg-indigo-100', text: 'text-indigo-700', gradient: 'from-indigo-400 to-indigo-600' },
            subadmin: { bg: 'bg-purple-100', text: 'text-purple-700', gradient: 'from-purple-400 to-purple-600' },
            developer: { bg: 'bg-emerald-100', text: 'text-emerald-700', gradient: 'from-emerald-400 to-cyan-500' }
        };

        async function loadUsers() {
            try {
                const result = await api.getUsers();
                if (result.success) {
                    users = result.data || [];
                    updateStats();
                    renderUsers();
                } else {
                    document.getElementById('usersGrid').innerHTML = `<p class="col-span-full text-center py-10 text-red-600">${result.error}</p>`;
                }
            } catch (error) {
                document.getElementById('usersGrid').innerHTML = '<p class="col-span-full text-center py-10 text-red-600">Connection failed</p>';
            }
        }

        function updateStats() {
            document.getElementById('totalUsers').textContent = users.length;
            document.getElementById('adminCount').textContent = users.filter(u => u.role === 'admin').length;
            document.getElementById('subadminCount').textContent = users.filter(u => u.role === 'subadmin').length;
            document.getElementById('devCount').textContent = users.filter(u => u.role === 'developer').length;
        }

        function filterUsers(filter) {
            currentFilter = filter;
            
            ['all', 'admin', 'subadmin', 'developer'].forEach(f => {
                const btn = document.getElementById(`filter-${f}`);
                if (f === filter) {
                    btn.className = 'px-4 py-2 bg-indigo-600 text-white rounded-lg font-medium transition-all';
                } else {
                    btn.className = 'px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all';
                }
            });
            
            renderUsers();
        }

        function renderUsers() {
            const container = document.getElementById('usersGrid');
            const filteredUsers = currentFilter === 'all' ? users : users.filter(u => u.role === currentFilter);
            
            if (filteredUsers.length === 0) {
                container.innerHTML = `
                    <div class="col-span-full text-center py-10">
                        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                        </div>
                        <p class="text-gray-500">No users found</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = filteredUsers.map(user => {
                const role = roleColors[user.role] || roleColors.developer;
                const initials = user.name?.split(' ').map(n => n[0]).join('').substring(0, 2) || 'U';
                
                return `
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 sm:p-6 hover:shadow-md transition-all cursor-pointer" onclick="viewUser('${user._id}')">
                        <div class="flex items-start justify-between mb-3 sm:mb-4">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br ${role.gradient} rounded-full flex items-center justify-center text-white text-lg sm:text-xl font-bold">
                                ${initials}
                            </div>
                            <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full ${role.bg} ${role.text} capitalize">${user.role}</span>
                        </div>
                        <h3 class="text-base sm:text-lg font-bold text-gray-900 mb-1 truncate">${user.name}</h3>
                        <p class="text-gray-500 text-xs sm:text-sm mb-3 sm:mb-4 truncate">${user.email}</p>
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between text-xs sm:text-sm gap-1 sm:gap-0">
                            <span class="text-gray-400">Rate: <span class="text-gray-700 font-medium">₹${user.hourlyRate || 0}/hr</span></span>
                            <span class="text-gray-400">${user.projectCount || 0} projects</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function viewUser(userId) {
            const user = users.find(u => u._id === userId);
            if (!user) return;
            
            selectedUserId = userId;
            const role = roleColors[user.role] || roleColors.developer;
            const initials = user.name?.split(' ').map(n => n[0]).join('').substring(0, 2) || 'U';
            
            document.getElementById('viewUserAvatar').textContent = initials;
            document.getElementById('viewUserAvatar').className = `w-20 h-20 mx-auto rounded-full bg-gradient-to-br ${role.gradient} flex items-center justify-center text-white text-3xl font-bold`;
            document.getElementById('viewUserName').textContent = user.name;
            document.getElementById('viewUserEmail').textContent = user.email;
            document.getElementById('viewUserRole').textContent = user.role;
            document.getElementById('viewUserPhone').textContent = user.phone || '-';
            document.getElementById('viewUserRate').textContent = `₹${user.hourlyRate || 0}/hr`;
            document.getElementById('viewUserProjects').textContent = user.projectCount || 0;
            document.getElementById('viewUserJoined').textContent = formatDate(user.createdAt);
            
            // Hide delete button for self
            const deleteBtn = document.getElementById('deleteUserBtn');
            deleteBtn.style.display = user._id === currentUser._id ? 'none' : 'block';
            
            document.getElementById('viewUserModal').classList.remove('hidden');
        }

        function openAddUserModal() {
            document.getElementById('addUserModal').classList.remove('hidden');
            document.getElementById('addUserError').classList.add('hidden');
        }

        function closeModal(id) {
            document.getElementById(id).classList.add('hidden');
        }

        async function createUser() {
            const name = document.getElementById('newUserName').value.trim();
            const email = document.getElementById('newUserEmail').value.trim();
            const password = document.getElementById('newUserPassword').value;
            const role = document.getElementById('newUserRole').value;
            const phone = document.getElementById('newUserPhone').value.trim();
            const hourlyRate = document.getElementById('newUserRate').value;
            
            const errorEl = document.getElementById('addUserError');
            
            if (!name || !email || !password) {
                errorEl.textContent = 'Name, email, and password are required';
                errorEl.classList.remove('hidden');
                return;
            }
            
            if (password.length < 6) {
                errorEl.textContent = 'Password must be at least 6 characters';
                errorEl.classList.remove('hidden');
                return;
            }
            
            const btn = document.getElementById('createUserBtn');
            btn.disabled = true;
            btn.textContent = 'Creating...';
            
            try {
                const result = await api.createUser({
                    name,
                    email,
                    password,
                    role,
                    phone: phone || undefined,
                    hourlyRate: hourlyRate ? Number(hourlyRate) : undefined
                });
                
                if (result.success) {
                    closeModal('addUserModal');
                    // Reset form
                    document.getElementById('newUserName').value = '';
                    document.getElementById('newUserEmail').value = '';
                    document.getElementById('newUserPassword').value = '';
                    document.getElementById('newUserPhone').value = '';
                    document.getElementById('newUserRate').value = '';
                    await loadUsers();
                } else {
                    errorEl.textContent = result.error || 'Failed to create user';
                    errorEl.classList.remove('hidden');
                }
            } catch (error) {
                errorEl.textContent = 'Connection failed';
                errorEl.classList.remove('hidden');
            }
            
            btn.disabled = false;
            btn.textContent = 'Create User';
        }

        async function deleteSelectedUser() {
            if (!selectedUserId) return;
            
            if (!confirm('Are you sure you want to delete this user?')) return;
            
            try {
                const result = await api.deleteUser(selectedUserId);
                if (result.success) {
                    closeModal('viewUserModal');
                    await loadUsers();
                } else {
                    alert(result.error || 'Failed to delete user');
                }
            } catch (error) {
                alert('Connection failed');
            }
        }

        function logout() {
            api.logout();
            window.location.href = '/login';
        }

        async function init() {
            if (!api.isLoggedIn()) {
                window.location.href = '/login';
                return;
            }
            
            currentUser = api.getUser();
            if (!currentUser || !currentUser.name) {
                window.location.href = '/login';
                return;
            }
            
            // Only admin can access this page
            if (currentUser.role !== 'admin') {
                window.location.href = '/my-work';
                return;
            }
            
            document.getElementById('userName').textContent = currentUser.name;
            document.getElementById('userInitials').textContent = currentUser.name.split(' ').map(n => n[0]).join('').substring(0, 2);
            
            await loadUsers();
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        init();
    </script>
</body>
</html>
